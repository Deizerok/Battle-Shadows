<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/project_shadow"
            android:textAppearance="@color/black"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:paddingHorizontal="80dp"
            android:text="@string/play" />

        <Button
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:id="@+id/setNicknameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/set_nickname" />

        <Button
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:id="@+id/rulesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:paddingHorizontal="80dp"
            android:text="@string/guide" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeNicknameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/style_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/anta_font"
            android:text="@string/enter_your_nickname"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/anta_font"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="10dp"
            android:text="@string/name"
            android:textColor="@color/white"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/nextButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:paddingHorizontal="60dp"
            android:text="@string/enter"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choiceWeaponLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/style_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/choiceWeaponTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/anta_font"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/akButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/ak_47" />

        <Button
            android:id="@+id/m4Button"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/m4_a1" />

        <Button
            android:id="@+id/awpButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/awp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chooseMedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/style_radius"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/anta_font"
            android:text="@string/time_to_choose_a_medicine"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pillsButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/tablet" />

        <Button
            android:id="@+id/energeticButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/energetics" />

        <Button
            android:id="@+id/medKitButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/first_aid_kit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rulesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#938f99"
            android:visibility="visible"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/anta_font"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/guide_for_battle_shadows"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/anta_font"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/hello_this_is_a_mini_guide_to_the_game_n_battle_of_the_shadows_n_to_start_the_game_you_need_to_click_on_the_play_button_n_you_have_a_choice_of_weapons_after_there_is_a_choice_of_medicines_after_choosing_the_medicine_you_will_have_a_battle_with_the_bot_n_and_in_the_end_it_will_show_who_won"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/closeGuideButton"

                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/close"
                    android:gravity="bottom"
                    app:icon="@drawable/cancel_fill0_wght400_grad0_opsz24" />

            </LinearLayout>

            <!-- put whatever you want -->

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/battle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView

            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/nameOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Name: NameOne" />

        <TextView
            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/healthOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Health Point: 100" />

        <TextView
            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/gunOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Gun: Scout Damage:29" />

        <TextView
            android:padding="24dp"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="VS" />


        <TextView
            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/nameTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Name: NameTwo" />

        <TextView
            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/healthTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Health Point: 100" />

        <TextView
            android:padding="4dp"
            android:textSize="16sp"
            android:id="@+id/gunTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="Gun: Scout Damage:29" />

        <Button
            android:layout_margin="24dp"
            android:id="@+id/goToResultButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anta_font"
            android:text="@string/go_to_result" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/resultLayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:gravity="center"
    android:paddingVertical="40dp"
    android:layout_margin="8dp"
    android:background="@drawable/style_radius_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingHorizontal="64dp"
        android:paddingVertical="12dp"
        android:textSize="24sp"
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anta_font"
        android:text="Winner: Name \n Loser:NameTwo" />


    <Button
        android:layout_margin="24dp"
        android:id="@+id/goToGameMenuButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anta_font"
        android:text="@string/go_to_main_menu" />
</LinearLayout>


    </LinearLayout>
</LinearLayout>
